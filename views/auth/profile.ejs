    font-size: 19px;
}
</style>
<div class="container rounded bg-white mt-5 mb-5" style="box-shadow:0 5px 11px rgb(0 0 0 / 8%), 0 5px 10px rgb(0 0 0 / 20%);">
    <div class="row">
        <div class="col-md-6 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5" id="left-con"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span class="text-black-50"><%=user.email%></span>
                <span style="font-weight: 800;">
                    <h3>Name:&nbsp;  </h3>
            <%if(user.name){ %>
                    <%=user.name%>
             <%   }else{ %>

              <%  } %>

                </span>
               
                 <span>
                    <h3>Contact:&nbsp;  </h3> 
                            <%if(user.contact){ %>
                                    <%=user.contact%>
                             <%   }else{ %>
                
                              <%  } %>
                
                                </span>
                                <span>
                                    <h3>Deals In:&nbsp; </h3>
                                    <%if(user.deals){ %>
                                            <%=user.deals%>
                                     <%   }else{ %>
                        
                                      <%  } %>
                        
                                        </span>
                                        <span>
                                            <h3>Location:&nbsp;  </h3>
                                            <%if(user.address){ %>
                                                    <%=user.address%>
                                             <%   }else{ %>
                                
                                              <%  } %>
                                
                                                </span>
                                                <span>
                                                    <h3>Role:&nbsp;  </h3>
                                                    <%if(user.status){ %>
                                                            <%=user.status%>
                                                     <%   }else{ %>
                                        
                                                      <%  } %>
                                        
                                         </span>                                                
            </div>
        </div>
        <div class="col-md-6 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right"><i class="fas fa-user"></i> Profile Settings</h4>
                </div>
             <form action="/profile" method="post">
                <div class="row mt-2">
                    <div class="col-md-12"><label class="labels">Name/Business</label><input type="text" class="form-control" placeholder="Name/Business name" name="name" value=""></div>

                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Mobile Number</label><input type="text" class="form-control" placeholder="enter phone number" value="" name="contact"></div>
                    <div class="col-md-12"><label class="labels">Address</label><input type="text" class="form-control" placeholder="enter address" value="" name="address"></div>
                    <div class="col-md-12"><label class="labels">Deals With</label><input type="text" class="form-control" placeholder="Deals With" value="" name="deals"></div>
                    <div class="col-md-12"><label style="display: block;" class="labels">Status</label>
                        <select name="status" id=""class="btn btn-secondary dropdown-toggle">
                            <option value="buyer">Select option</option>
                            <option value="buyer">Buyer</option>
                            <option value="seller">Seller</option>
                            <option value="both">Both</option>
                        </select>
                    </div>
                   
                  
                </div>
                <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>
              </form>

            
            </div>
        </div>

    </div>
</div>
</div>
</div>
<%- include("../partials/footer") %>